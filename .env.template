# Telegram Trading Bot Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram User ID (to receive private messages)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
# PostgreSQL database URL (for Render, this is provided automatically)
DATABASE_URL=postgresql://username:password@localhost:5432/trading_bot

# =============================================================================
# MARKET DATA API KEYS
# =============================================================================
# Alpha Vantage API Key (primary data source)
# Get free key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Bybit API Keys (for crypto data)
# Get from: https://www.bybit.com/app/user/api-management
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here

# OANDA API Keys (for forex data - optional)
# Get from: https://www.oanda.com/account/tpa/personal_token
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading mode: 'paper' for simulation, 'live' for real trading
TRADING_MODE=paper

# Account size for position sizing calculations
ACCOUNT_SIZE=10000

# Maximum risk per trade (percentage of account)
MAX_RISK_PER_TRADE=2.0

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
# Environment: 'development' or 'production'
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# RENDER PLATFORM SETTINGS (Auto-provided by Render)
# =============================================================================
# Port for web service (auto-set by Render)
# PORT=8080

# Render service ID (auto-set by Render)
# RENDER_SERVICE_ID=

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================
# Timezone for reports and signals
TIMEZONE=UTC

# Enable/disable features
ENABLE_DAILY_REPORTS=true
ENABLE_WEEKLY_REPORTS=true
ENABLE_SECONDARY_SIGNALS=true

# Performance thresholds
MIN_WIN_RATE=60
MIN_DAILY_PIPS=50
MAX_DAILY_PIPS=80

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Secret key for encryption (generate a random 32-character string)
SECRET_KEY=your_secret_key_for_encryption_here

# JWT token expiration (in hours)
JWT_EXPIRATION_HOURS=24
